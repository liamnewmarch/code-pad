{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase-debug.log",
      "firebase.json",
      "package-lock.json",
      "package.json",
      "README.md",
      "rollup.config.js",
      "src/**",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
			{
				"source": "service-worker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		]
  }
}
